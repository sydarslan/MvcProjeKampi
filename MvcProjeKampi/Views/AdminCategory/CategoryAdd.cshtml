@model EntityLayer.Category
@{
    ViewBag.Title = "CategoryAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<h3>Yeni Kategori Ekleme Sayfası</h3>

<br />

@using (Html.BeginForm("CategoryAdd", "AdminCategory", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Kategori Adı")
        @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CategoryName)
        <br /> <br />
        @Html.Label("Açıklama Yazınız")
        @Html.TextAreaFor(x => x.CategoryDescription, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CategoryDescription)
        <br /> <br />
        <button id="btnkaydet" class="btn btn-info">Kaydet</button>
    </div>
}
<script>
    $('#btnkaydet').click(function () {
        swal("Tebrkler!", "Ekleme işlemi başarılı bir şekilde gerçekleşti!", "success");
    });
</script>

